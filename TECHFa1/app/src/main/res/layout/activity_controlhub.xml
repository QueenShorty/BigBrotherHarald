<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ControlHub">

    <TableLayout
        android:id="@+id/tableLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="64dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:id="@+id/row1"
            android:layout_width="328dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_room1"
                android:layout_width="250dp"
                android:layout_height="38dp"
                android:text="Living Room"
                android:textSize="20sp" />

            <Button
                android:id="@+id/bn_delete1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Delete" />


        </TableRow>

        <TableRow
            android:id="@+id/row2"
            android:layout_width="328dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_room2"
                android:layout_width="250dp"
                android:layout_height="38dp"
                android:text="Kitchen"
                android:textSize="20sp" />

            <Button
                android:id="@+id/bn_delete2"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:text="Delete" />


        </TableRow>

        <TableRow
            android:id="@+id/row3"
            android:layout_width="328dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_room3"
                android:layout_width="250dp"
                android:layout_height="38dp"
                android:text="Master Bedroom"
                android:textSize="20sp" />

            <Button
                android:id="@+id/bn_delete3"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:text="Delete" />


        </TableRow>

        <TableRow
            android:id="@+id/row4"
            android:layout_width="328dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_room4"
                android:layout_width="250dp"
                android:layout_height="38dp"
                android:text="Bathroom"
                android:textSize="20sp" />

            <Button
                android:id="@+id/bn_delete4"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:text="Delete" />


        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/bn_addRoom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Add Room"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout2" />


</android.support.constraint.ConstraintLayout>