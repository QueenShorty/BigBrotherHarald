        <activity
            android:name=".DeviceServices"
            android:label="Device Services"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ProfilePage"
            android:label="Profile Page"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ControlHub"
            android:label="Room Settings"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ManageUsers"
            android:label="Manage Users"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".UserLogs"
            android:label="User Logs"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Proximity"
            android:label="Proximity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".addUser"
            android:label="Add User"
            android:screenOrientation="portrait"/>
    </application>

</manifest>